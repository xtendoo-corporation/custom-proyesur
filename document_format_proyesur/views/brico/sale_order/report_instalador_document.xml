<?xml version="1.0"?>
<odoo>
    <data>

        <record id="report_instalador_sale_brico" model="ir.actions.report">
            <field name="name">Parte instalador BricoDepot</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">document_format_proyesur.instalador_report_brico</field>
            <field name="report_file">document_format_proyesur.instalador_report_brico</field>
            <field name="paperformat_id" ref="document_format_proyesur.paperformat_proyesur_report"/>
        </record>

        <template id="instalador_report_brico">
            <t t-name="document_format_proyesur.instalador_report_brico">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <t t-call="document_format_proyesur.instalador_document_template" t-lang="doc.partner_id.lang"/>
                        <t t-call="document_format_proyesur.instalador_document_template" t-lang="doc.partner_id.lang"/>
                    </t>
                </t>
            </t>
        </template>

        <template
            id="document_format_proyesur.instalador_document_template">
            <t t-name="sale_document_template">
                <t t-call="document_format_proyesur.external_layout_boxed_brico_sale">
                    <t t-set="company" t-value="doc.company_id"/>
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                    <style>
                        .custom-div {
                        border: 2px solid #000;
                        border-radius: 10px;
                        padding: 10px;
                        width: 100%;
                        font-size: 12px;
                        }
                    </style>
                    <t t-set="forced_vat"
                       t-value="doc.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                    <t t-set="address">
                        <strong>Dirección de entrega:</strong>
                        <div t-field="doc.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <p t-if="doc.partner_id.vat"><t
                            t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>:
                            <span t-field="doc.partner_id.vat"/>
                        </p>
                    </t>
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id                              and doc.partner_invoice_id != doc.partner_id                              or doc.partner_shipping_id != doc.partner_invoice_id">
                        <t t-set="information_block">
                            <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Dirección de envío y
                                facturación:
                            </strong>
                            <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Dirección de facturación:
                            </strong>
                            <div t-field="doc.partner_invoice_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                <strong>Dirección de envío:</strong>
                                <div t-field="doc.partner_shipping_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </t>
                        </t>
                    </t>
                    <div class="page">
                        <div class="oe_structure"/>

                        <h2 class="mt16" style="font-size: 18px">
                            <span>PARTE DEL INSTALADOR</span>
                        </h2>

                        <div class="row mt32 mb32" id="informations">
                            <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                                <strong>Referencia:</strong>
                                <p class="m-0" t-field="doc.client_order_ref"/>
                            </div>
                            <div t-if="doc.date_order and doc.state not in ['draft','sent']"
                                 class="col-auto col-3 mw-100 mb-2">
                                <strong>Fecha:</strong>
                                <p class="m-0" t-field="doc.date_order"/>
                            </div>
                            <div t-if="doc.date_order and doc.state in ['draft','sent']"
                                 class="col-auto col-3 mw-100 mb-2">
                                <strong>Fecha:</strong>
                                <p class="m-0" t-field="doc.date_order"
                                   t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                            </div>
                            <div t-if="doc.validity_date and doc.state in ['draft', 'sent']"
                                 class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                                <strong>Expiración:</strong>
                                <p class="m-0" t-field="doc.validity_date"/>
                            </div>
                            <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                                <strong>Comercial:</strong>
                                <p class="m-0" t-field="doc.user_id"/>
                            </div>
                        </div>

                        <div class="custom-div" name="description">
                            <strong>Descripción del Servicio:</strong>
                            <p t-field="doc.order_line[0].name"/>
                        </div>

                        <br/>

                        <div class="custom-div" name="data">
                            <strong>Datos del Instalador:</strong>
                            <p>
                                Nombre:
                                <br/>
                                Telefono:
                            </p>
                        </div>

                        <br/>

                        <div class="custom-div" name="payment">
                            <strong>Cantidad pendiente de cobro:</strong>
                            <p t-field="doc.amount_total"/>
                        </div>

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                        <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(doc.signature)"
                                     style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="doc.signed_by"/>
                            </div>
                        </div>

                        <div class="oe_structure"/>

                        <p t-field="doc.note"/>
                        <p t-if="not is_html_empty(doc.payment_term_id.note)">
                            <span t-field="doc.payment_term_id.note"/>
                        </p>
                        <p id="fiscal_position_remark"
                           t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)">
                            <strong>Fiscal Position Remark:</strong>
                            <span t-field="doc.fiscal_position_id.sudo().note"/>
                        </p>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
