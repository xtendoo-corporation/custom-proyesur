<odoo>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.custom.proyesur</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="project_ids" optional="hide" context="{'group_by': 'project_ids'}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.custom.proyesur</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="project_ids" optional="hide" context="{'group_by': 'project_ids'}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.project.id.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']" position="after">
                <field name="project_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="after">
                <field name="project_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
