<odoo>
    <record id="account_analytic_line_tree_employee_cost" model="ir.ui.view">
        <field name="name">account.analytic.line.tree.employee.cost</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.timesheet_view_tree_user" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='unit_amount']" position="after">
                <field name="employee_timesheet_cost" optional="show" widget="monetary" readonly="0"/>
                <field name="employee_timesheet_cost_total" optional="show" sum="Total" widget="monetary" />
            </xpath>
        </field>
    </record>

